{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@schema/*": ["src/schema/*"],
      "@constant/*": ["src/constant/*"],
      "@helper/*": ["src/helper/*"],
      "@resolver/*": ["src/resolver/*"]
    },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
